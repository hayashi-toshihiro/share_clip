<%= render 'shared/title_bar', title: "いいね一覧" %>
<div class="bg-light">
  <div class="container d-flex justify-content-end background-color-lightyellow m-1">
    <%= link_to '時系列順', likes_clip_posts_path(clip_created_at: "true"), class: "ms-3 buttonOutline font-2" %>
    <%= link_to '再生数順', likes_clip_posts_path(most_views: "true"), class: "ms-3 buttonOutline font-2" %>
    <%= link_to '投稿順', likes_clip_posts_path(created_at: "true"), class: "ms-3 buttonOutline font-2" %>
  </div>
  <div class="scroll-list jscroll">
    <% @clip_posts.each do |clip_post| %>
      <div class="container mb-1 background-color-lightyellow">
        <%= render 'form.html.erb', clip_post: clip_post %>
      </div>
    <% end %>
    <%= link_to_prev_page @clip_posts, '前のページ', class: "prev" %>
    <%= link_to_next_page @clip_posts, '次のページ', class: "next" %>
  </div>
</div>