<%= link_to comment_like_path(current_user.comment_likes.find_by(comment_id: comment.id)),
      id: "comment_like_button_#{comment.id}",
      class: 'float-right',
      method: :delete, 
      remote: true do %>
  <i class="fa-solid fa-thumbs-up"></i>
  <%= comment.comment_likes.count %>
<% end %>