<div class="row text-center font-4 text-success"><h5>プレビュー</h5></div>
<div class="container border-dark border-1 border">
  <div class="row mt-3 mb-3 bg-white">
    <div class="col h3 ms-3 font-5">
      <%= image_tag preview_post.streamer_image, class: "rounded-circle me-2", size: "50x50" %>
      <%= preview_post.streamer %>
    </div>
    <div class="col d-flex justify-content-end align-items-end small">
      <div class="border-bottom border-dark text-muted"><%= Time.parse(preview_post.clip_created_at).strftime("%m/%d %H:%M:%S") %></div>
    </div>
  </div>
  <div class="row mb-3 bg-white">
    <div class="text-center mb-2 font-5"><%= preview_post.title %></div>
    <div class="d-flex justify-content-center mb-2">
      <div class="ratio" style="--bs-aspect-ratio: 56.25%; width: 500px;">
        <%= image_tag preview_post.thumbnail %>
      </div>
    </div>
    <div class="mb-3">
      <%= render 'tag_form.html.erb', clip_post: preview_post %>
    </div>
    <div class="d-flex justify-content-center">
      <div class="row<%= preview_post.content_title.blank? ? '' : ' form-control border bg-white' %>" style="width: 98%">
        <%= preview_post.content_title.presence || '' %>
      </div>
    </div>
  </div>
  <div class="row mb-3 bg-white">
    <div class="d-flex align-items-center justify-content-end">
      <i class="fa-regular fa-thumbs-up"></i>
      <div class="text-end">いいね！</div>
    </div>
  </div>
</div>