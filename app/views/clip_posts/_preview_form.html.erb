<div class="row text-center font-4 text-success"><h5>プレビュー</h5></div>
<div class="container border-dark border-1 border">
  <div class="row d-flex mt-2 mbs-2 bg-white">
    <div class="col-auto">
      <%= image_tag preview_post.streamer_image, class: "rounded-circle me-2", size: "50x50" %>
    </div>
    <h2 class="col-auto font-5">
      <%= preview_post.streamer %>
    </h2>
    <div class="col d-flex justify-content-end align-items-end">
      <div class="border-bottom border-dark text-muted font-size-1"><%= Time.parse(preview_post.clip_created_at).strftime("%m/%d %H:%M:%S") %></div>
    </div>
  </div>
  <div class="row mbs-2 bg-white">
    <div class="text-center font-5 font-size-small"><%= preview_post.title %></div>
    <div class="d-flex justify-content-center mbs-2">
      <div class="ratio" style="--bs-aspect-ratio: 56.25%; width: 500px;">
        <%= image_tag preview_post.thumbnail %>
      </div>
    </div>
    <div class="mbs-2">
      <%= render 'tag_form', clip_post: preview_post %>
    </div>
    <div class="d-flex justify-content-center mbs-2">
      <div class="row<%= preview_post.content_title.blank? ? '' : ' form-control border bg-white' %>" style="width: 98%">
        <%= preview_post.content_title.presence || '' %>
      </div>
    </div>
  </div>
  <div class="row mbs-2 bg-white ps-3 pe-3">
    <div class="d-flex align-items-center justify-content-end">
    <%= link_to "#", class:'float-right' do %>
      <i class="fa-regular fa-thumbs-up"></i>
        <%= 0 %>
      <% end %>
    </div>
  </div>
</div>