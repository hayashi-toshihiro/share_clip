<%= render 'shared/title_bar', title: "新規投稿" %>
<div class="container bg-light p-3 vh-100">
  <%= form_with(model: @user, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :email, "メールアドレス", class: "form-label float-start" %>
      <%= form.email_field :email, class: "form-control", id: "exampleInputEmail1" %>
    </div>
    <div class="mb-3">
      <%= form.label :password, "パスワード", class: "form-label float-start" %>
      <%= form.password_field :password, class: "form-control", id: "exampleInputPassword1" %>
    </div>
    <div class="mb-3">
      <%= form.label :password_confirmation, "パスワードの確認", class: "form-label float-start" %>
      <%= form.password_field :password_confirmation, class: "form-control", id: "exampleInputPassword1" %>
    </div>
    <div class="d-flex justify-content-center">
      <%= form.button "アカウント作成", type: "submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
