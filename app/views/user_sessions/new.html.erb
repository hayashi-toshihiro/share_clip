<% set_meta_tags title: "ログイン" %>
<%= render 'shared/title_bar', title: "ログイン" %>
<div class="container bg-light p-3 vh-100">
  <%= form_with(model: @user, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :email, "メールアドレス", class: "form-label float-start" %>
      <%= form.email_field :email, class: "form-control", id: "exampleInputEmail1" %>
    </div>
    <div class="mb-3">
      <%= form.label :password, "パスワード", class: "form-label float-start" %>
      <%= form.password_field :password, class: "form-control", id: "exampleInputPassword1" %>
    </div>
    <div class="d-flex justify-content-center">
      <%= form.button "ログイン", type: "submit", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="font-size-small">
    <div>初めての方は
    <%= link_to "新規登録", new_user_path, class: "no-decoration" %>
    !!
    </div>
  </div>
</div>